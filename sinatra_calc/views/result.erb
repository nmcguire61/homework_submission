
<% if @result %>
  <h1>the result is <%= @result %></h1>
<% end %>

<form method="get" action="/basic_calculator">
  <input type="number" name="first_number"
  placeholder="first number" step="0.01" value="<%= @first_number %>">
  <input type="text" name="operator"
  placeholder="operator" value="<%= @operator %>">
  <input type="number" name="second_number"
  placeholder="second number" step="0.01" value="<%= @second_number %>">
  <button>CALCULATE!</button>
</form>

