<div class="form">  
  <br>
  <%= form_for @player do |f| %>
    <%= f.label :first_name, "First Name:" %>
    <%= f.text_field :first_name %>
    <br>
    <br>
    <%= f.label :last_name, "Last Name:" %>
    <%= f.text_field :last_name %>
    <br>
    <br>
    <%= f.label :team_id, "Team:" %>
    <%= f.select :team_id, Team.all.map { |t| [t. name, t.id] } %>
    <br>
    <br>
    <%= f.label :position, "Position:" %>
    <%= f.select :position, %w(Seeker Chaser  Beater Keeper) %>
    <br>
    <br>
    <%= f.label :broomstick, "Broomstick:" %>
    <%= f.text_field :broomstick %>
    <br>
    <br>
    <%= f.submit button_text %>
  <% end %>
</div>