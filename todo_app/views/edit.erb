<form method='post' action='/items/<%= @item['id'] %>/edit'>
<dl>
  <dt><label for='item'>Item:</label></dt>
  <dd><input id='item' name='item' type='text' value='<%= @item['item'] %>'></dd>
</dl>
<dl>
  <dt><label for='details'>Details:</label></dt>
  <dd><textarea id='details' autofocus name='details'><%= @item['details'] %></textarea></dd>
</dl>
<button>Edit Task</button>
</form>